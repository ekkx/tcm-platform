ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=50051

# Database Configuration
DATABASE_DSN=postgres://tcmrsv:tcmrsv@tcmrsv-db:5432/tcmrsv_db
DATABASE_MAX_CONNS=10
DATABASE_MIN_CONNS=1
DATABASE_MAX_CONN_LIFETIME=30m
DATABASE_MAX_CONN_IDLE_TIME=5m

# Authentication Configuration
AUTH_PASSWORD_AES_KEY=dev_aes_key_change_in_production
AUTH_JWT_SECRET_KEY=dev_secret_key_change_in_production
AUTH_ACCESS_EXPIRATION=24h
AUTH_REFRESH_EXPIRATION=168h # 7 days

# Logging Configuration
LOGGING_LEVEL=debug

# Scheduler Configuration
SCHEDULER_CRON_EXPRESSION=0 0 12 * * *
SCHEDULER_MAX_CONCURRENT_JOBS=5
